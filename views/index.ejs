<%- include('./partials/header') %>

<div class="blogs content">
  <h2>All Blogs</h2>

  <% if(blogs.length > 0) {%> <% blogs.forEach(blog=>{%>
  <h3 class="title"><%= blog.title %></h3>
  <p class="title"><%= blog.snippet %></p>
  <a href="/blogs/<%=blog._id %>" class="btn btn-primary btn-sm">Edit</a>
  <a href="/blogs/<%=blog._id %>" class="btn btn-warning btn-sm">View</a>

  <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#blog-<%-blog._id%>">Delete</button>
  <!-- Modal Starts -->
  <div class="modal fade" id="blog-<%-blog._id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Confirmation</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">Are you sure you want to delete this?</div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>

          <form action="/blogs/<%- blog._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-primary btn-sm">Yes</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal Ends -->
  <% }) %> <% }else{ %>
  <p>No data found.</p>
  <%}%>
</div>

<%- include('./partials/footer') %>
